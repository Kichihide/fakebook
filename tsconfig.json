{
    "compilerOptions": {
        "baseUrl": "./",
        "module": "commonjs",
        "target": "esnext",
        "strict": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["dom", "esnext"],
        "paths": {
            "@components/*": ["./src/components/*"],
            "@commons/*": ["./src/commons/*"],
            "@layouts/*": ["./src/layouts/*"],
            "@styles/*": ["./src/styles/*"],
            "types/*": ["./graphql-types/*"]
        }
    },
    "include": ["./src/**/*", "./src/**/**/*"],
    "exclude": ["**/node_modules", "./public", "./.cache", "./graphql-types", "./gatsby-node"]
}
